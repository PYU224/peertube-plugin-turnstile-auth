{
  "name": "peertube-plugin-turnstile-auth",
  "version": "0.0.1",
  "description": "PeerTube plugin for Cloudflare Turnstile authentication on registration",
  "engine": {
    "peertube": ">=4.2.0"
  },
  "keywords": [
    "peertube",
    "peertube-plugin"
  ],
  "homepage": "https://github.com/PYU224/peertube-plugin-turnstile-auth",
  "author": "PYU224",
  "bugs": "https://github.com/PYU224/peertube-plugin-turnstile-auth",
  "library": "./dist/server/main.js",
  "clientScripts": [
    {
      "script": "dist/client/register.js",
      "scopes": [
        "signup"
      ]
    }
  ],
  "css": [
    "dist/client/style.css"
  ],
  "devDependencies": {
    "@peertube/peertube-types": "^7.2.3",
    "@types/node": "^18.0.0",
    "esbuild": "^0.17.0",
    "rimraf": "^5.0.0",
    "sass": "^1.62.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client && npm run build:css",
    "build:server": "npx tsc -p server/tsconfig.json",
    "build:client": "npx esbuild client/register.ts --bundle --outfile=dist/client/register.js --format=iife --target=es2017",
    "build:css": "npx sass assets/style.scss assets/style.css",
    "clean": "npx rimraf dist assets/style.css",
    "prepare": "npm run build"
  }
}
