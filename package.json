{
  "name": "peertube-plugin-turnstile-auth",
  "version": "0.0.1",
  "description": "PeerTube plugin for Cloudflare Turnstile authentication on registration",
  "engine": {
    "peertube": ">=4.2.0"
  },
  "keywords": [
    "peertube",
    "peertube-plugin"
  ],
  "homepage": "https://github.com/PYU224/peertube-plugin-turnstile-auth",
  "author": "PYU224",
  "bugs": "https://github.com/PYU224/peertube-plugin-turnstile-auth",
  "library": "./dist/server/main.js",
  "clientScripts": [
    {
      "script": "dist/client/register.js",
      "scopes": ["signup"]
    }
  ],
  "css": [
    "dist/client/style.css"
  ],
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/peertube-types": "^4.2.0",
    "esbuild": "^0.17.0",
    "typescript": "^5.0.0",
    "sass": "^1.62.0"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "npm run build:client:js && npm run build:client:css",
    "build:client:js": "esbuild client/register.ts --bundle --outfile=dist/client/register.js --format=iife --target=es2017",
    "build:client:css": "sass client/style.scss dist/client/style.css",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  }
}